<Window x:Class="AndreottiMaratonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndreottiMaratonaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <StackPanel>
        <Button x:Name="BtnLeggiDaFile" Content="Leggi dal file" Click="BtnLeggiDaFile_Click"/>
        <DataGrid x:Name="DgrElencoMaratone" VerticalScrollBarVisibility="Visible" Height="230" />
        <TextBox x:Name="TxtNomeAtleta" Text="Nome dell'atleta" Margin="10"/>
        <TextBox x:Name="TxtCittà" Text="Città" Margin="10"/>
        <Button x:Name="BtnCerca" Content="Cerca il tempo impiegato dall'atleta" Click="BtnCerca_Click"/>
        <Label Name="LblTempo"/>
    </StackPanel>
</Window>
